<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="entity">
        <description>Persistence unit for entities</description>
        
        <class>com.tapereader.model.Account</class>
        <class>com.tapereader.model.BucketShop</class>
        <class>com.tapereader.model.DopeBook</class>
        <class>com.tapereader.model.Line</class>
        <class>com.tapereader.model.Order</class>
        <class>com.tapereader.model.Roll</class>
        <class>com.tapereader.model.Security</class>
        <class>com.tapereader.model.Ticket</class>
        <class>com.tapereader.model.Tip</class>
        <class>com.tapereader.marketdata.MarketData</class>
  
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:~/entity-v1;DB_CLOSE_DELAY=-1;MVCC=TRUE;AUTO_SERVER=TRUE" />
            <property name="javax.persistence.jdbc.user" value="admin" />
            <property name="javax.persistence.jdbc.password" value="BuyHigh2018" />
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            
            <property name="hibernate.show_sql" value="true" />
            <!-- Drop and re-create the database schema on startup -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="jdbc.batch_size" value="50" />
        </properties>

    </persistence-unit>

</persistence>